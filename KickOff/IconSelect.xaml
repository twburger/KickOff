<Window x:Class="KickOff.IconSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KickOff"
        mc:Ignorable="d"
        Title="Icon Select" Height="300" Width="300">
    <ScrollViewer x:Name="scrollMainPanel" HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled">
        <WrapPanel x:Name="MainPanel" Width="{Binding ElementName=scrollMainPanel, Path=ViewportWidth}" Orientation="Vertical" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" />
        </ScrollViewer>
</Window>
